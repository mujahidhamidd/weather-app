<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f4f1f1"
    android:orientation="vertical"

    android:padding="10dp"
    tools:context="com.ticket.dell.refds.MainActivity">





    <LinearLayout
        android:id="@+id/sleep"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="wrap_content">









        <TextView


            android:id="@+id/city_textview"
            android:layout_weight="1"
            android:layout_marginTop="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City name : 7"
            android:textSize="20dp"
            android:fontFamily="serif"
            android:textColor="#000"

          />




        <ImageView

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:src="@drawable/weather"
            android:layout_height="wrap_content" />






        <TextView

            android:id="@+id/show_update"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:gravity="end"

            android:textSize="16dp"
            android:textColor="#281eea"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/updatelayout"
            android:layout_above="@id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentBottom="true"

                >


                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City Name"
                    android:editable="false"
                    android:clickable="true"
                    android:letterSpacing="0.0025"
                    android:inputType="text"
                    android:textColor="#7000"
                    android:textColorHint="#7000"
                    android:background="#00000000"
                    android:textSize="16dp"
                    android:padding="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                >




                <EditText
                    android:id="@+id/temprature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temprature"
                    android:clickable="true"
                    android:editable="false"

                    android:inputType="text"
                    android:letterSpacing="0.0025"
                    android:textColorHint="#7000"
                    android:textSize="16dp"
                    android:textColor="#7000"
                    android:background="#00000000"
                    android:padding="15dp" />





            </LinearLayout>


            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:letterSpacing="0.0025"
                android:textColor="#fff"
                android:textSize="16dp"
                android:gravity="center"
                android:padding="15dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"/>






        </LinearLayout>

    </LinearLayout>
</LinearLayout>